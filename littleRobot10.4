#include <mbed.h>
#include <C12832.h>

// Using Arduino pin notation
C12832 lcd(D11, D13, D12, D7, D10);

int main()
{
    AnalogIn  left(A0);
    AnalogIn right(A1);

    lcd.cls();

    lcd.rect(0,0,127,31,1);
    lcd.locate(2,2);

    lcd.printf("left:");
    lcd.locate(50,2);
    lcd.printf("right:");
    while(true) {   // this is the third thread
      lcd.locate(2,12);
      lcd.printf("%2f \n", left.read());
      lcd.locate(50,12);
      lcd.printf("%2f \n", right.read());

      wait_ms(1000);
    }
}
